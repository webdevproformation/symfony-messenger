{% extends 'base.html.twig' %}

{% block title %}produits{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<table>
    <thead>
        <tr>
            <th>id</th>
            <th>namespace</th>
            <th>id Produit</th>
            <th>action</th>
        </tr>
    </thead>
    <tbody>
        {% for message in messages %}
            <tr>
                <td>{{message.id}}</td>
                <td>{{message.titre}}</td>
                <td>{{message.message.idProduit}}</td>
                <td><a href="{{path("app_resend", {id : message.id})}}">Renvoyer</a></td>
                <td><a href="{{path("app_delete", {id : message.id})}}">Supprimer</a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}